<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="./index.css">
</head>

<body>
    <form action="/" method="POST" enctype="multipart/form-data">
        <input type="text" name="ma_sp" placeholder="Nhap ma san pham">
        <input type="text" name="ten_sp" placeholder="Nhap ten sam pham">
        <input type="submit" value="Them san pham moi">
    </form>
    <form id="delete" method="POST" action="/delete" enctype="multipart/form-data">
        <div class="title"><h5>Danh sach san pham</h5><input type="submit" value="Xoa" /></div>
        <table>
            <tr>
                <th>Ma san pham</th>
                <th>Ten san pham</th>
                <th>hanh dong</th>
            </tr>
            <% for(let i=0; i < sanPhams.length;i++){%>
                <tr>
                    <td>
                        <%=sanPhams[i].ma_sp%>
                    </td>
                    <td>
                        <%=sanPhams[i].ten_sp%>
                    </td>
                    <td><input type="checkbox" name="<%=sanPhams[i].id%>"/></td>
                </tr>
                <%}%>
        </table>
    </form>
</body>

</html>